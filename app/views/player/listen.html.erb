<div class="listen">
  <div id="player" class="standalone" data-autoplay>
    <div class="on-air">
      <%= image_tag 'default-cover.png', id: 'player-default-picture'%>
      <img src="" style="display:none;" id="player-picture">

      <div class="on-air-info">
        <div>
          <h4 id="player-status">FreshSounds</h4>
          <p id="player-title">Best music from FreshAir</p>
          <a href="#" id="player-details" style="display:none;">Details</a>
          <span id="player-space" style="display:none;">&nbsp;&nbsp;</span>
          <%= link_to 'View shows', shows_path, target: '_blank' %><br>
        </div>
        <div>
          <%= link_to 'Schedule', current_schedule_path, class: 'button button-transparent', target: '_blank' %>
          <span id="audio-control" class="button button-blue">
            <span id="play-icon"><i class="fa fa-play" aria-hidden="true"></i></span>
            <span id="audio-control-txt">Play now</span>
          </span>
        </div>
      </div>
    </div>

  </div>
</div>
