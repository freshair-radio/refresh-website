<nav class="main-nav">
  <ul>
    <li class="selected"><%= link_to 'Home', root_path%></li>
    <% @global_teams.each do |team| %>
      <li>
        <%= link_to team.name, team%>
      </li>
    <% end %>
    <% @global_pages.each do |page| %>
    <li><%= link_to page.title, page_path(page)%></li>
    <% end %>
  </ul>
</nav>

<% if flash.any? %>
  <%= render 'shared/messages', locals: {messages: flash} %>
<% end %>



<section>
  <div class="latest-posts-line">
    <h2>Latest posts.</h2>
    <div>Tag: <a href="#">Interview</a> | <a href="#">Event</a> | <a href="#">Review</a> | <a href="#">Playlist</a>
    </div>
  </div>
  <div class="boxes posts">
    <% @latest_posts.each do |post| %>
      <%= link_to post do %>
        <div class="post">
          <div class="post-info">
            <div class="post-title">
              <%= post.title %>
            </div>
            <div class="post-caption">
              <%= post.short_body %>
            </div>
            <div class="post-details">
              <div>
                <%= post.created_at %>
              </div>
              <div>
                <%= post.author.name %>
              </div>
            </div>
          </div>
        </div>
      <% end%>
    <% end %>
  </div>
</section>
