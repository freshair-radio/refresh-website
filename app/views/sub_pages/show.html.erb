<nav class="main-nav">
  <ul>
    <li><%= link_to 'Home', root_path%></li>
    <% @global_teams.each do |team| %>
      <li class="<%= team == @team ? 'selected' : ''%>">
        <%= link_to team.name, team%>
      </li>
    <% end %>
    <% @global_pages.each do |page| %>
    <li class="<%= page.slug == @sub_page.page.slug ? 'selected' : ''%>">
      <%= link_to page.title, page_path(page) %>
    </li>
    <% end %>
  </ul>
</nav>
<h1><%= @sub_page.title %></h1>

<p>
  <% # Important to sanitize! Will strip off unsafe code %>
  <%= sanitize @sub_page.content.html_safe, tags: accepted_tags, attributes: accepted_attributes %>
</p>
